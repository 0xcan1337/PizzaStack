<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Siparistakip">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="194dp">

        <ImageView
            android:id="@+id/siparisalindi"
            android:layout_width="153dp"
            android:layout_height="94dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/siparisalindi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/siparisalindi"
            android:text="Siparişiniz alındı"
            android:textSize="20sp"
            android:layout_marginLeft="129dp"
            android:textColor="@color/yesil"></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="210dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/alindi" />



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/hazir" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/yolda" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/teslim" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="295dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siparişiniz\n    alındı "
        android:textSize="19sp"
        android:textColor="@color/yesil"
        android:textStyle="bold"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Siparişiniz\n hazırlanıyor "
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siparişiniz\n  yola çıktı "
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Teslim\n   edildi "
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"></TextView>

</LinearLayout>


</FrameLayout>