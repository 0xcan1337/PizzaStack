<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".ui.Profilim">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profilim:"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Adı:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView11"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textViewUserValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewUsername"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewUserValue"
        android:text="E-posta:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewEmailValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEmail"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifre:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/textViewEmailValue"/>

    <TextView
        android:id="@+id/textViewPasswordValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefon Numarası:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/textViewPasswordValue"/>

    <TextView
        android:id="@+id/textViewPhoneValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adres Bilgileri:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/textViewPhoneValue"/>

    <TextView
        android:id="@+id/textViewAdresValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/siparidevam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALIŞVERİŞE DEVAM ET"
        android:layout_below="@+id/textViewAdresValue"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginTop="40dp"/>


</RelativeLayout>